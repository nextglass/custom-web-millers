<div class="u__item">
  <div class="u__row">
    <div class="u__beer-name {{#unless item.containers.length}} u__no-container {{/unless}}">
      {{item.brewery}} {{item.name}}
    </div>
    <div class="u__container-info">
      {{item.containers.0.price}}
    </div>
  </div>

  <div class="u__info">
    {{item.style}}, {{item.brewery_location}}
  </div>
</div>
